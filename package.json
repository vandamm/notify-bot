{
  "name": "18xx-bot",
  "version": "1.0.0",
  "description": "A simple bot to send 18xx.games notifications to Telegram",
  "repository": "https://github.com/vandamm/18xx-bot.git",
  "author": "Alexander Vansach <alex@vansach.me>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --incremental --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --reporter=verbose --reporter=junit --outputFile.junit=reports/junit.xml",
    "deploy": "wrangler versions upload --preview-alias test",
    "deploy:prod": "npm test && wrangler deploy",
    "dev": "wrangler dev"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.9.7",
    "@types/node": "^20.19.17",
    "@vitest/ui": "^3.2.4",
    "prettier": "^2.4.0",
    "ts-node": "^10.2.1",
    "typegram": "^5.2.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wrangler": "^4"
  },
  "dependencies": {
    "itty-router": "^5.0.18"
  }
}
